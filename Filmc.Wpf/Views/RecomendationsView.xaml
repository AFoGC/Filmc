<UserControl x:Class="Filmc.Wpf.Views.RecomendationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filmc.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="705" d:DesignWidth="1265">
    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Style="{StaticResource GrayButton}" HorizontalAlignment="Left" Width="120" Margin="3"
                Content="Go_Back" Command="{Binding CloseMenuCommand}"/>

        <DataGrid Margin="3" Grid.Row="1" ItemsSource="{Binding RecomendedFilms}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Item.Id}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Item.Name}" Width="300" IsReadOnly="True"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Item.RealiseYear}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Similarity" Binding="{Binding Similarity}" Width="300" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
